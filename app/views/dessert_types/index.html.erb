<h1>Listing Dessert Types</h1>

<% @dessert_types.each_slice(4) do |dessert_types| %>
<div class="row">
  <% dessert_types.each do |dessert_type| %>
    <div class="col-md-3">
    	<div class="thumbnail">
    	  <a href="<%= dessert_type_path(dessert_type.id) %>">
    		  <%= image_tag dessert_type.image.url(:dessert_type_thumb), class: "grow" %>
    		</a>
    	</div>
    	<div class="caption"><%= truncate(dessert_type.name, :length => 25, :separator => ' ') %> (<%=@recipes.where(dessert_type_id: dessert_type.id).count %>)</div>
    </div>
  <% end %>
</div>
<br/>
<% end %>

<p><%= link_to 'Add new Recipe', new_recipe_path %></p>
