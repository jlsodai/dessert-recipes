<%= form_for @comment, :html => {class: 'comment-form form-horizontal'}, remote: true do |f| %>
<fieldset>
  <%= f.hidden_field :recipe_id, value: @recipe.id %>
  <!-- Text input-->
  <div class="form-group">
    <% if logged_in? %>
    <%= f.email_field :name, placeholder: current_author.name, disabled: true, input_html: { value: current_author.name }, class: "form-control input-md" %>
    <% else %>
    <%= f.text_field :name, placeholder: "Enter Full name", class: "form-control input-md" %>
    <% end %>
  </div>

  <div class="form-group">
    <% if logged_in? %>
    <%= f.email_field :email, placeholder: current_author.email, disabled: true, input_html: { value: current_author.email }, class: "form-control input-md" %>
    <% else %>
    <%= f.text_field :email, placeholder: "Enter your email", class: "form-control input-md" %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.text_area :content, placeholder: "Comment", class: "form-control input-md" %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
</fieldset>
<% end %>