<p id="notice"><%= notice %></p>

<h1><%= @recipe.name %></h1>

<p>
  <strong>Description:</strong>
  <%= @recipe.description %>
</p>

<p>
  <strong>Ingredients:</strong>
  <%= @recipe.ingredients %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @recipe.image.url(:thumb, class: "recipe_image") %>
</p>

<%= render "comments/new_form" %>

<h2>Comments</h2>

<% if @comments.count > 0 %>
  <% @comments.each do |c| %>
    <p><%= c.name %></p>
  <% end %>
<% end %>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>