<div class="row">
    <h1><%= @recipe.name %></h1>
  <div class="col-md-3">
    <form method="post" action="#">
      <div class="input-group">
        <input type="text" placeholder="Search blog..." class="form-control c-square c-theme-border">
        <span class="input-group-btn">
          <button type="button" class="btn c-theme-btn c-theme-border c-btn-square">Go!</button>
        </span>
      </div>
    </form>
    <br/>
    <h3>Similar Recipes</h3>
    <% @recipes.each do |recipe| %>
      <div class="thumbnail">
        <a href="<%= recipe_path(recipe.id) %>">
          <%= image_tag recipe.image.url(:recipe_thumb), class: "grow" %>
        </a>
      </div>
      <div class="caption"><%= truncate(recipe.name, :length => 25) %></div>
      <br/>
    <% end %>
  </div>
  <div class="col-md-9">
    <%= image_tag @recipe.image.url(:recipe_main, class: "recipe_image") %>
<!--    <p>
      <strong>Description:</strong>
      <%= @recipe.description %>
    </p>

    <p>
      <strong>Ingredients:</strong>
      <%= @recipe.ingredients %>
    </p>

    <p>
      <strong>Image:</strong>
      <%= image_tag @recipe.image.url(:recipe_main, class: "recipe_image") %>
    </p>
    <% if logged_in? %>
      <% if @recipe.author_id == current_author.id %>
        <%= link_to 'Edit', edit_recipe_path(@recipe) %> |
      <% end %>
    <% end %>
    <%= link_to 'Back', recipes_path %>

    <h2>Comments</h2>

    <div id="comments">
      <% if @comments.count > 0 %>
        <% @comments.each do |c| %>
          <p>"<%= c.content %>" - <%= c.name %></p>
        <% end %>
      <% end %>
    </div>

    <h1>Add Comments</h1> -->

      <div class="c-panel c-margin-b-30">
        <div class="c-author">
          <a href="#">By <span class="c-font-uppercase"><%= @author.name %></span></a> on <%= @recipe.created_at.strftime("%d %b, %y - %I:%M %p") %>
          <!-- <span class="c-comments"><%= @comments.count %> comments</span> -->
        </div>
      </div>

      <div class="c-desc">
        <h3>Description</h3>
        <p><%= @recipe.description %></p>
        <h3>Ingredients</h3>
        <p><%= @recipe.ingredients %></p>
        <h3>Directions</h3>
        <p><%= @recipe.directions %></p>
      </div>

      <div class="comments">
        <h3>Comments</h3>
        <ul id="comments" class="commentlist">
          <% if @comments.count > 0 %>
            <% @comments.each do |c| %>
              <li>
               <div class="comment">
                 <img class="avatar" src="http://2.gravatar.com/avatar/bc2aa7a0acc8abc9dee081631740382a?s=70&amp;d=mm&amp;r=g" alt="">
                 <div class="comment-content">
                   <div class="comment-by"><strong><%= c.name %></strong> <span class="date"><%= c.created_at.strftime("%d %b, %y at %I:%M %p") %></span>
                     <a aria-label="Reply to Vasterad" onclick="" href="" class="comment-reply-link" rel="nofollow"><i class="fa fa-reply"></i>Reply</a>
                     </div>
                     <p><%= c.content.gsub(/\n/, '<br/><br/>') %></p>
                   </div>
               </div>
              </li><!-- #comment-## -->
            <% end %>
          <% else %>
            <p>No Comments available. Be the first to comment</p>
          <% end %>
        </ul>
      </div>

    <%= render "comments/new_form" %>
  </div>
</div>


