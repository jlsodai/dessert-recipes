<div class="row page-title-heading">
  <h1 class="text-center">Add Recipe</h1>
</div>

<div class="row">
  <%= form_for @recipe, :html => {class: 'form-horizontal', multipart: true} do |f| %>
  <fieldset>
    <%= hidden_field_tag "author_id", 2 %>
  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-4 control-label">Title</label>  
    <div class="col-md-4">
        <%= f.text_field :name, placeholder: "Title", class: "form-control input-md" %>
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-md-4 control-label">Description</label>
    <div class="col-md-4">
      <%= f.text_area :description, placeholder: "Enter Description", class: "form-control input-md" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label">Ingredients</label>
    <div class="col-md-4">
      <%= f.text_area :ingredients, placeholder: "Enter Ingredients", class: "form-control input-md" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label">Direction</label>
    <div class="col-md-4">
      <%= f.text_area :directions, placeholder: "Enter Ingredients", class: "form-control input-md" %>
    </div>
  </div>  
  <!-- Select Basic 
  <div class="form-group">
    <label class="col-md-4 control-label" for="author_expertise">Expertise</label>
    <div class="col-md-4">
      <select id="author_expertise" name="author_expertise" class="form-control">
        <option value="Yes">Select Expertise</option>
        <option value="No">Chef</option>
        <option value="">Non Chef</option>
      </select>
    </div>
  </div>
  -->
  <!-- Textarea -->
  <div class="form-group">
    <label class="col-md-4 control-label">Upload Image</label>
    <div class="col-md-4">                     
      <%= f.file_field :image, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-md-4 control-label"></label>
    <div class="col-md-4">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
  
  </fieldset>
  <% end %>
</div>